<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jymycabdriverapp">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JYMYCABDriverApp">
        <activity android:name=".Activity.OrderDetail">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Activity.Terms_And_Condition" />
        <activity android:name=".Activity.History" />
        <activity android:name=".Activity.Wallet" />
        <activity android:name=".Activity.Notification" />
        <activity android:name=".Activity.EditProfile" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.OrderAcceptActivity" />
        <activity android:name=".Activity.CustomToolbar" />
        <activity android:name=".Activity.SplashScreen">
        </activity>
        <activity android:name=".Activity.Login" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>